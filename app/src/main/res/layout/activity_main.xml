<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >




<!-- ================== Prime Number part ((one))   -->
    <EditText
        android:id="@+id/editInitialValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:hint="Enter any INTEGER number"
        android:inputType="number"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUTTON"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:background="#4DB6AC"
        />

<!-- =============== Prime number part ((two))==============    -->

    <EditText
        android:id="@+id/editInitialNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:hint="Initial Number"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/editTargetedNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:hint="Targeted Number"
        android:inputType="number"
        />

    <Button
        android:id="@+id/check_Prime_or_Not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prime or Non_Prime"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:backgroundTint="#D81B60"

        />

    <TextView
        android:id="@+id/textNonPrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:background="#4DB6AC"
        />
    <TextView
        android:id="@+id/textPrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:background="#4DB6AC"
        />

        </LinearLayout>

    </ScrollView>


</LinearLayout>